<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="30dp"
    android:background="@color/white"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/linearHeart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/heart" />

        </LinearLayout>

        <TextView
            android:id="@+id/loveMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearHeart"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Love using our App?"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shareThoughts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loveMsg"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Share your thoughts and review our app"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/LButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shareThoughts"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="15dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:text="Rate Us"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/exitApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/colorPrimaryLight"
                app:cardCornerRadius="15dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="Exit App"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>